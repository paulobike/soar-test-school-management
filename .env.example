SERVICE_NAME=school-management
ENV=development

# Server
USER_PORT=5111

# MongoDB
MONGO_URI=mongodb://localhost:27017/school-management

# Redis (single URI applied to all services by default)
REDIS_URI=redis://127.0.0.1:6379

# JWT secrets — keep these private, never commit them
SHORT_TOKEN_SECRET=

# Token expiry durations (e.g. 30d, 1h, 60m)
LONG_TOKEN_EXPIRES_IN=30d
SHORT_TOKEN_EXPIRES_IN=1h

# NaCl encryption — must be a base64-encoded 32-byte key
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NACL_SECRET=
